<UserControl x:Class="PointOfSale.CustomizePecosPulledPork"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock FontSize="30" Text="Customize Pecos Pulled Pork!"/>
        <StackPanel Orientation="Horizontal">

            <CheckBox IsChecked="{Binding Path=Bread}" FontSize="18" Width="85">Bread</CheckBox>
            <CheckBox IsChecked="{Binding Path=Pickle}" FontSize="18" Width="93">Pickle</CheckBox>
            
        </StackPanel>
    </StackPanel>
</UserControl>
