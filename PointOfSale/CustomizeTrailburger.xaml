<UserControl x:Class="PointOfSale.CustomizeTrailburger"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock FontSize="30" Text="Customize Trail Burger!"/>
        <StackPanel Orientation="Horizontal">

            <CheckBox IsChecked="{Binding Path=Bun}" FontSize="18" Width="77">Bun</CheckBox>
            <CheckBox IsChecked="{Binding Path=Ketchup}" FontSize="18" Width="105">Ketchup</CheckBox>
            <CheckBox IsChecked="{Binding Path=Mustard}" FontSize="18" Width="101">Mustard</CheckBox>
            <CheckBox IsChecked="{Binding Path=Cheese}" FontSize="18" Width="92">Cheese</CheckBox>
            <CheckBox IsChecked="{Binding Path=Pickle}" FontSize="18" >Pickle</CheckBox>
        </StackPanel>
    </StackPanel>
</UserControl>
