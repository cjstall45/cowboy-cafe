<UserControl x:Class="PointOfSale.CustomizeTexasTea"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:data="clr-namespace:CowboyCafe.Data;assembly=CowboyCafe.Data"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ObjectDataProvider MethodName="GetValues"
                        ObjectType="{x:Type sys:Enum}"
                        x:Key="teaSizeEnum">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="data:Size" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock FontSize="30" Text="Customize Texas Tea!"/>
        <StackPanel Orientation="Horizontal">
            <ListBox 
               ItemsSource="{Binding Source={StaticResource teaSizeEnum}}"
               SelectedItem="{Binding Path=DrinkSize}"/>
            <CheckBox IsChecked="{Binding Path=Lemon}" FontSize="18" Width="96" Margin="20,0,0,0">Lemon</CheckBox>

            <CheckBox IsChecked="{Binding Path=Ice}" FontSize="18" Width="66" >Ice</CheckBox>

            <CheckBox IsChecked="{Binding Path=Sweet}" FontSize="18" Width="74">Sweet</CheckBox>
        </StackPanel>
    </StackPanel>
</UserControl>
